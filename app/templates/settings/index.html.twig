{% extends 'base.html.twig' %}

{% block title %}Settings{% endblock %}

{% block body %}
<div class="home-container">
    <h1 class="page-title">Account Settings</h1>
   <h2 class="section-title">API Keys</h2>
   <h3 class="sub-section-title">Manage API Keys for third-party applications</h3>
    <div class="container">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Key</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for apiKey in api_keys %}
                <tr>
                    <td>{{ apiKey.id }}</td>
                    <td>{{ apiKey.apikey }}</td>
                    <td>{{ apiKey.roles }}</td>
                    <td>
                        <form method="post" action="{{ path('settings_api_keys_delete', {'id': apiKey.id}) }}" onsubmit="return confirm('Are you sure you want to delete this key?');">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
   </div>
   <h2 class="section-title">New Key</h2>
   <div class="container">
   {{ form_start(form) }}
         <div class="form-group">
             {{ form_widget(form.role) }}
         </div>
         <div class="form-group">
             {{ form_widget(form.submit) }}
         </div>
   {{ form_end(form) }}

  </div>
</div>
{% endblock %}
