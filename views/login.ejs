<style>
    body {
    background-color: #000000;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    font-family: Arial, sans-serif;
}

.login-container {
    text-align: center;
    width: 400px;
}

/* Title styling */
.login-title {
    font-size: 3em;
    font-weight: bold;
    color: orange;    
    margin-bottom: 20px;
}

/* Welcome text styling */
.welcome-text {
    color: white;
    margin-bottom: 20px;
    font-size: 1.5em;
}

/* Input box styling */
.input-box {
    width: 100%;
    padding: 10px;
    margin-bottom: 20px;
    background-color: #333333;
    border: 1px solid grey;
    color: white;
    font-size: 1em;
}

/* Change input border color on focus */
.input-box:hover {
    outline: none;
    border-color:white;
}

.input-box:focus {
    outline: none;
    border-color: #f09026;
}

/* Button styling */
.login-button {
    width: 30%;
    padding: 10px;
    background-color: #f09026;
    border: none;
    color: white;
    cursor: pointer;
}

/* Button hover effect */
.login-button:hover {
    background-color: #d97d1e; /* Darker shade of orange */
}
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body>
    <div class="login-container">
        <h1 class="login-title">Phoenixd Wallet</h1>
        <p class="welcome-text">Welcome back</p>
        <div id="login-error-message" style="color: red; display: none;"></div>
        <input type="password" class="input-box" placeholder="Password">        
        <button id="login-button" class="login-button">Login <i class="bi bi-box-arrow-in-right"></i></button>
    </div>
</body>
</html>

