        background-color: #111111;
        /* Background color of the box */
        border: none;
        /* Optional border for the box */
        border-radius: 5px;
        /* Optional rounded corners */
        box-sizing: border-box;/
    }


    .text-content {
        flex: 1;
        /* Take up available space */
        white-space: nowrap;
        /* Prevents text from wrapping to the next line */
        overflow: hidden;
        /* Hide any overflow content */
        text-overflow: ellipsis;
        /* Shows '...' at the end if the text is too long */
        margin-right: 10px;
        /* Space between the text and icons */
    }

    .icons {
        display: flex;
        gap: 10px;
        /* Space between icons */
    }

    .icon {
        font-size: 18px;
        /* Adjust icon size */
        cursor: pointer;
        /* Optional: change cursor to pointer for clickability */
    }

