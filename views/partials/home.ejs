<script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>

<style>
    .balanceRow {
        display: flex;
        /* Use flexbox to align items in a row */
        justify-content: space-between;
        /* Equal space between elements */
        align-items: center;
        /* Vertically center items */
        padding: 0 5px;
        /* Padding inside the row */
        /* background-color: #666666; */
        background-color: #111111;
        /* Background color for the row */
    }

    .balanceCol {
        flex: 1;
        /* Each column takes equal space */
        display: flex;
        justify-content: space-between;
        align-items: center;
        /* background-color: #666666; */
        background-color: #111111;
        /* Background color for the column */
        padding: 10px;
        margin: 5px;
        /* Space between columns */
        border-radius: 5px;
        /* Rounded corners for the boxes */
    }

    .balanceItem {
        display: flex;
        flex-direction: column;
        /* Arrange items vertically */
        align-items: center;
        /* Center items horizontally */
        justify-content: center;
        /* Center items vertically */
    }

    .balanceValue {
        font-weight: bold;
        /* margin-bottom: 5px; */
        /* Space between the value and the label */
    }

    .stringBox {
        display: flex;
        align-items: center;
        width: 100%;
        padding: 10px;
        background-color: #111111;
        border: none;
        border-radius: 5px;
        box-sizing: border-box;
        overflow: hidden; /* Hides any content that overflows */
        text-overflow: ellipsis; /* Adds ellipsis (...) at the end of the overflowing content */
        white-space: nowrap;
    }
    
    .bolt12Offer {
        flex-grow: 1; 
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        margin-right: 10px;
    }

    .text-content {
        flex: 1;
        /* Take up available space */
        white-space: nowrap;
        /* Prevents text from wrapping to the next line */
        overflow: hidden;
        /* Hide any overflow content */
        text-overflow: ellipsis;
        /* Shows '...' at the end if the text is too long */
        margin-right: 10px;
        /* Space between the text and icons */
    }

    .icons {
        display: flex;
        gap: 10px;
        /* Space between icons */
    }

    .icon {
        font-size: 18px;
        cursor: pointer;
    }

    #sendButton {
        background-color:  white;
        color: #f09125;
        border: none;
        padding: 8px 12px;
        cursor: pointer;
    }

    #receiveButton {
        background-color: #f09125 ;
        color: white;
        border: none;
        padding: 8px 12px;
        cursor: pointer;
    
    }

    .balance {
        font-weight: bold;
        padding: 8px 12px;
        display: inline-block;
        background-color: #222222;
        align-items: center;
    
    }
</style>

